<div class="panel panel-white">
    <div class="panel-heading">
        <h6 class="panel-title" dragonlanguage><i class="icon-users2 position-left"></i>
            <language>MESSAGE.ic('mono.authentication')</language>
        </h6>
    </div>

    <div class="panel-body">

        <div class="row">
            <div class="col-sm-2 col-md-2  " ng-show="configuration.mode!=='admin'">
                <%- FORM.input("config.users.model", scope, {
                    maxlength: 50,
                    placeholder: "Users Table",
                    icon: {class: "none"}
                }) %>
            </div>
            <div class="col-sm-2 col-md-2  " ng-show="configuration.mode!=='admin'">
                <%-
                FORM.selectsimple("config.users.engine", scope, {
                    label: "Database Engine",
                    value: "id",
                    data: [
                        {id: 'mssql', name: 'SQL Server'},
                        {id: 'mysql', name: 'MySql'},
                        {id: 'oracle', name: 'Oracle'},
                        {id: 'storage', name: 'Files'}
                    ],
                    icon: {class: "wrench3"}
                }) %>
            </div>
            <div class="col-sm-12 col-md-3  " ng-show="configuration.mode!=='admin'">
                <%- FORM.input("config.users.fields.username", scope, {
                    maxlength: 50,
                    placeholder: "Username Field",
                    icon: {class: "none"}
                }) %>
            </div>
            <div class="col-sm-12 col-md-3  center-icon" ng-show="configuration.mode!=='admin'">
                <%- FORM.input("config.users.fields.password", scope, {
                    maxlength: 50,
                    placeholder: "Username Field",
                    icon: {class: "none"}
                }) %>
            </div>

            <div class="col-sm-12 col-md-2 " ng-show="configuration.mode!=='admin'">

                <%-
                FORM.selectsimple("config.users.hash", scope, {
                    label: "Hash",
                    value: "id",
                    data: [
                        {id: 'md5', name: 'MD5'}
                    ],
                    icon: {class: "wrench3"}
                }) %>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12 col-md-4 ">
                <%- FORM.input("config.users.expire", scope, {
                    maxlength: 50,
                    placeholder: "Session expire",
                    icon: {class: "none"},
                    helptext: "d,h,m,s"
                }) %>
            </div>

            <div class="col-sm-12 col-md-4 ">
                <%- FORM.input("config.users.attempts", scope, {
                    maxlength: 50,
                    placeholder: "Login attempts allowed",
                    icon: {class: "none"}
                }) %>
            </div>

            <div class="col-sm-12 col-md-4 ">
                <%- FORM.input("config.users.unlockTime", scope, {
                    maxlength: 50,
                    isNumber: true,
                    placeholder: "UnlockTime in minutes",
                    icon: {class: "none"}
                }) %>
            </div>


        </div>
    </div>
</div>

<div class="panel panel-white">
    <div class="panel-heading">
        <h6 class="panel-title" dragonlanguage><i class="icon-sphere position-left"></i>
            <language>MESSAGE.ic('mono.network')</language>
        </h6>
    </div>

    <div class="panel-body">

        <div class="row" ng-show="configuration.mode!=='admin'">

            <div class="col-sm-4 col-md-4  " >
                <%- FORM.input("config.domain", scope, {
                    maxlength: 50,
                    placeholder: "Domain",
                    icon: {class: "browser"}
                }) %>
            </div>

            <div class="col-sm-4 col-md-4  ">
                <%- FORM.input("config.subdomain", scope, {
                    maxlength: 20,
                    placeholder: "Subdomain",
                    icon: {class: "browser"}
                }) %>
            </div>

            <div class="col-sm-12 col-md-2  ">
                <%- FORM.input("config.port", scope, {placeholder: "Port", maxlength: 4, isNumber: true}) %>
            </div>

            <div class="col-sm-1 col-md-2">
                <br>
                <%- FORM.checkbox("config.ssl", scope, {text: 'SSL/HTTPS', size: 'switchery-sm'}) %>
            </div>

        </div>
        <div class="row">
            <%- FORM.password("config.googlemap", scope, {
                normal: true,
                maxlength: 50,
                placeholder: "Google Map API Key"
            }) %>
        </div>
    </div>
</div>


