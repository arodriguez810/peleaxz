{
  "users": {
    "model": "users",
    "path": "users",
    "engine": "mysql",
    "fields": {
      "username": "username",
      "password": "password",
      "id": "id",
      "email": "email"
    },
    "rules": {
      "min": 8,
      "max": 15,
      "number": 1,
      "mayus": 1,
      "letter": 1,
      "specialchar": 1,
      "notusername": 1,
      "expire": 5
    },
    "addFields": {
      "fullName": "capitalize(this.name+space+this.lastname)",
      "getID": "this.id"
    },
    "hash": "md5",
    "expire": "24h",
    "attempts": 4,
    "unlockTime": 3,
    "super": [
      "angel"
    ]
  },
  "audit": {
    "insert": {
      "user_created": "new SESSION().current().getID()"
    },
    "update": {
      "user_updated": "new SESSION().current().getID()"
    }
  }
}