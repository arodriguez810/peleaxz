<div class="tab-content">
    <div class="tab-pane active" id="basic">

        <div class="col-sm-6 col-md-6">
            <%- FORM.file("profileimage", scope, {
                show: 'image',
                title: 'Upload Profile Image',
                maxfiles: 2,
                columns: 2
            }) %>
        </div>
        <div class="row">
            <div class="col-sm-6 col-md-6">
                <%- FORM.input("username", scope, {maxlength: 15}) %>
            </div>
            <div class="col-sm-6 col-md-6">
                <%- FORM.password("password", scope, {maxlength: 15}) %>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-md-6">
                <%- FORM.input("name", scope, {maxlength: 50}) %>
            </div>
            <div class="col-sm-6 col-md-6">
                <%- FORM.input("lastname", scope, {maxlength: 50}) %>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-md-6">
                <%- FORM.input("email", scope, {maxlength: 50}) %>
            </div>
            <div class="col-sm-6 col-md-6">
                <%- FORM.checkbox("active", scope, {text: 'Active?'}) %>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-md-6">
                <%- FORM.select("group", scope, {
                    column: "name",
                    table: "group",
                    label: 'Groups',
                    get: {table: 'user_group', fieldFrom: 'id', fieldTo: 'user', field: 'group'},
                    multiple: true,
                    icon: {class: "users4"}
                }) %>
            </div>
        </div>
    </div>
</div>

<%- FORM.footer(scope) %>



