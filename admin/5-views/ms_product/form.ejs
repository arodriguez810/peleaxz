<ul class="nav nav-tabs bg-<%= COLOR.primary %>-800 nav-tabs-component nav-justified">
    "nav nav-lg nav-tabs nav-tabs-solid nav-tabs-component"
    <li class="active">
        <a href="#basic" data-toggle="tab">
            <i class="icon-menu7 position-left"></i>
            Form
            <i class="border-white position-right"></i>
        </a>
    </li>
</ul>

<div class="tab-content">
    <div class="tab-pane active" id="basic">
        <div class="row">
            <div class="col-sm-6 col-md-6">
                <%- FORM.input("name", scope, {maxlength: 50}) %>
            </div>
            <div class="col-sm-6 col-md-6">
                <%- FORM.input("price", scope, {
                    isNumber: true,
                    icon: {class: "cash3"},
                    format: {mask: "000,000,000,000,000.00", options: {reverse: true}}
                }) %>
            </div>
            <div class="col-sm-6 col-md-6">
                <%- FORM.select("category", scope, {
                    column: "ms_category_name",
                    table: "ms_category",
                    icon: {class: "archive"}
                }) %>
            </div>
            <div class="col-sm-6 col-md-6">
                <%- FORM.checkbox("active", scope, {text: 'Active?'}) %>
            </div>
            <div class="col-sm-12 col-md-12">
                <%- FORM.textarea("description", scope, {maxlength: 200}) %>
            </div>
        </div>
    </div>
</div>

<div class="modal-footer">
    <span class="label label-white text-<%= TAG.table %>-300 label-rounded label-icon">
            <i class="position-right"></i>
    </span>
    <button type="button" class="btn bg-<%= TAG.table %>-600" ng-click="<%= scope %>.pages.form.save()">
        Save
    </button>

    <button type="button" class="btn bg-<%= TAG.table %>-600" ng-click="<%= scope %>.pages.form.close()">
        Close
    </button>
</div>





