<div class="tab-content">
    <div class="tab-pane active" id="basic">
        <div class="row">
            <div class="col-sm-6 col-md-6">
                <%- FORM.input("name", scope, {maxlength: 50}) %>
            </div>
            <div class="col-sm-6 col-md-6">
                <%- FORM.format("price", scope, {
                    isNumber: true,
                    icon: {class: "cash3"},
                    format: {mask: "000,000,000,000,000.00", options: {reverse: true}}
                }) %>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-md-6">

                <%- FORM.select("category", scope, {
                    column: "ms_category_name",
                    table: "ms_category",
                    icon: {class: "archive"}
                }) %>
            </div>
            <div class="col-sm-6 col-md-6">
                <%- FORM.checkbox("active", scope, {text: 'Active?'}) %>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <%- FORM.textarea("description", scope, {maxlength: 200}) %>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-md-12" ng-repeat="(key,value) in ms_product.custom">

                <input type="text" ng-model="ms_product.custom[$index]" ng-model-onblur class="form-control">
            </div>
        </div>
    </div>
</div>

<%- FORM.footer(scope) %>




