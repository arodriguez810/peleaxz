<script>
    RUNTABLE('<%= scope %>');
</script>
<div class="dragon-panel" id="<%= scope %>TablePanel" style="overflow-x: scroll;overflow-y: visible">
    <!--Table List -->

    <div dragonlanguage=""
         ng-show="<%= scope %>.records.data.length<=0"
         class="alert alpha-<%= TAG.table %> border-<%= TAG.table %> alert-styled-left">
        <language>MESSAGE.i('table.nodata')</language>
    </div>

    <div class="visible-md visible-lg" style="display: inline" ng-show="<%= scope %>.filters.lastFilter.length>0">
        <div
                ng-bind-html="<%= scope %>.filters.description()"
                class="alert alpha-<%= TAG.table %> border-<%= TAG.table %> alert-styled-left">
        </div>
    </div>

    <%- include('paginator',{scope:scope}); %>

    <table ng-show="<%= scope %>.records.data.length>1"
           class="table-responsive table table-togglable table-framed sindu-table dragon-table <%= scope %>-drag"
           data-animation="bounceInUp"
           id="<%= scope %>Table"
           style="{{<%= scope %>.funcWidth}}margin-bottom: {{<%= scope %>.firstCountOption(false)*40}}px"
           data-scope="<%= scope %>">
        <thead class="bg-<%= TAG.table %>" id="<%= scope %>head">
        <!--Columns-->
        <tr class="bg-<%= TAG.table %> dragon-columns">
            <th ng-repeat="(key, value) in <%= scope %>.columns() track by key"
                ng-show="<%= scope %>.columnVisible(value)"
                data-column="{{key}}"
                ng-dblclick="<%= scope %>.cell.dblColumnSelect($event)"
                class="handle {{value.responsive}}"
            >
                <%- include('columns',{scope:scope}); %>
            </th>
            <%- include('columnOption',{scope:scope}); %>
        </tr>
        </thead>
        <tbody id="<%= scope %>TableBody">
        <!--Rows-->
        <tr ng-repeat="(key, row) in <%= scope %>.records.data track by key" data-object="{{row}}"
            style="{{<%= scope %>.rowStyle(row)}}"
            class="dragon-rows {{<%= scope %>.rowClass(row)}}  {{<%= scope %>.rowDeleted(row)}} {{<%= scope %>.trCheck(row)}}">
            <%- include('rows',{scope:scope}); %>
            <!--Options-->
            <%- include('rowOptions',{scope:scope}); %>
        </tr>
        </tbody>
    </table>

    <table ng-show="<%= scope %>.records.data.length===1" class="table table-togglable table-framed">
        <tbody>
        <%- include('rowOptionsSimple',{scope:scope}); %>
        <%- include('rowsSimple',{scope:scope}); %>
        </tbody>
    </table>
    <!--Table List-->
</div>
