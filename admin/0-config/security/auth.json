{
  "users": {
    "model": "my_user",
    "engine": "mysql",
    "fields": {
      "username": "username",
      "password": "password"
    },
    "addFields": {
      "fullName": "capitalize(this.name+space+this.lastname)"
    },
    "hash": "md5",
    "expire": "3h",
    "attempts": 4,
    "unlockTime": 3 //minutes
  },
  "audit": {
    "insert": {
      "user_created": "SESSION.current().id"
    },
    "update": {
      "user_updated": "SESSION.current().id"
    }
  }
}