<% include ../master/head %>
<div class="jumbotron text-center">
    <h1>Count: <span class="label label-info">{{ todos.length }}</span></h1>
</div>
<div id="todo-list" class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <div class="checkbox" ng-repeat="item in todos">
            <label>
                <button class="btn btn-primary btn-lg" ng-click="todo.delete(item._id,after)">
                    {{ item.name }}, {{ item.description}}
                </button>
            </label>
        </div>

    </div>
</div>
<div id="todo-form" class="row">
    <div class="col-sm-8 col-sm-offset-2 text-center">
        <form>
            <div class="form-group">
                <input class="form-control input-lg text-center" placeholder="" ng-model="model.name">
                <input class="form-control input-lg text-center" placeholder="" ng-model="model.description">
            </div>
            <button class="btn btn-primary btn-lg" ng-click="todo.insert(model,after)">Add todo</button>
        </form>
    </div>
</div>
<% include ../master/footer %>